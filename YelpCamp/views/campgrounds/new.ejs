<% layout('layouts/boilerplate') %>

<div class="container mt-5 mb-5">
    <h1 class="text-center">Add New Campground</h1>

    <!-- ✅ Add "needs-validation" instead of "class validated-form" -->
    <form action="/campgrounds" method="POST" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="title" class="form-label">Title:</label>
            <input type="text" class="form-control" name="campground[title]" id="title" required>
            <div class="invalid-feedback">Please enter a title.</div>
        </div>

        <div class="mb-3">
            <label for="location" class="form-label">Location:</label>
            <input type="text" class="form-control" name="campground[location]" id="location" required>
            <div class="invalid-feedback">Please enter a location.</div>
        </div>

        <div class="mb-3">
            <label for="price" class="form-label">Price:</label>
            <input type="number" class="form-control" name="campground[price]" id="price" required min="0">
            <div class="invalid-feedback">Please enter a valid price.</div>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Image URL:</label>
            <input type="url" class="form-control" name="campground[image]" id="image" placeholder="/images/default.jpg">
            <div class="invalid-feedback">Please enter a valid image URL (optional).</div>
        </div>

        <button type="submit" class="btn btn-success">Add Campground</button>
        <a href="/campgrounds" class="btn btn-secondary ms-2">Back to Campgrounds</a>
    </form>
</div>

<!-- ✅ Bootstrap validation script -->
<script>
(() => {
  'use strict'

  const forms = document.querySelectorAll('.needs-validation')

  Array.from(forms).forEach(form => {
    form.addEventListener('submit', event => {
      if (!form.checkValidity()) {
        event.preventDefault()
        event.stopPropagation()
      }

      form.classList.add('was-validated')
    }, false)
  })
})()
</script>
