<%- include('../partials/header') %>

<h2>Edit Book</h2>
<form method="POST" action="/books/<%= book._id %>?_method=PUT">
  <label>Title:</label>
  <input type="text" name="book[title]" value="<%= book.title %>" required>

  <label>Author:</label>
  <input type="text" name="book[author]" value="<%= book.author %>" required>

  <label>Genre:</label>
  <input type="text" name="book[genre]" value="<%= book.genre %>">

  <label>Rating (1â€“5):</label>
  <input type="number" name="book[rating]" value="<%= book.rating %>" min="1" max="5">

  <label>Status:</label>
  <select name="book[status]">
    <option value="to-read" <%= book.status === 'to-read' ? 'selected' : '' %>>To Read</option>
    <option value="read" <%= book.status === 'read' ? 'selected' : '' %>>Read</option>
  </select>

  <button type="submit">Update Book</button>
</form>

<%- include('../partials/footer') %>
